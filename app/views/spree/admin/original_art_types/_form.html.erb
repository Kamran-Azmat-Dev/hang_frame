<div>
  <%= f.field_container :name, class: ['form-group'], 'data-hook' => 'name' do %>
    <%= f.label :name, Spree.t(:name) %>
    <%= f.text_field :name, class: 'form-control' %>
    <%= f.error_message_on :name %>
  <% end %>

  <%= f.field_container :active, class: ['form-group checkbox'], 'data-hook' => 'active' do %>
    <%= f.check_box :active %>
    <%= f.label :active, Spree.t(:active) %>
    <%= f.error_message_on :active %>
  <% end %>
</div>
