<div data-hook="admin_country_form_fields">
  <%= f.hidden_field :mount_type_id, value: CustomFrame::MountType.find_by(name: 'custom').id  %>

  <%= f.field_container :default_size, class: ['form-group'], 'data-hook' => 'mount_type_id' do %>
    <%= f.label :default_size, Spree.t(:default_size) %>
    <%= f.select :default_size, options_from_collection_for_select(CustomFrame::MountType.where(name: 'standard'), :width, :formatted_label, f.object.default_size),  class: 'form-control' %>
    <%= f.error_message_on :default_size %>
  <% end %>

  <%= f.field_container :min_value, class: ['form-group'], 'data-hook' => 'min_value' do %>
    <%= f.label :min_value, Spree.t(:min_value) %>
    <%= f.text_field :min_value, class: 'form-control' %>
    <%= f.error_message_on :min_value %>
  <% end %>

  <%= f.field_container :max_value, class: ['form-group'], 'data-hook' => 'min_value' do %>
    <%= f.label :max_value, Spree.t(:max_value) %>
    <%= f.text_field :max_value, class: 'form-control' %>
    <%= f.error_message_on :max_value %>
  <% end %>

  <%= f.field_container :price, class: ['form-group'], 'data-hook' => 'price' do %>
    <%= f.label :price, Spree.t(:price) %>
    <%= f.text_field :price, class: 'form-control' %>
    <%= f.error_message_on :price %>
  <% end %>
</div>
