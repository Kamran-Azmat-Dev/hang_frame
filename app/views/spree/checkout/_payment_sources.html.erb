<div id="existing_cards" class="payment-sources-existing-cards" style="display:none;">
  <%= radio_button_tag 'use_existing_card', 'yes', true, class: 'hidden' %>
  <div class="form-group" data-hook="existing_cards">
    <div class="d-flex flex-column payment-sources-list">
      <% @payment_sources.each do |card| %>
        <%= render partial: 'credit_card', locals: { card: card } %>
      <% end %>
      <div class="vspree-radio-container mt-4">
        <%= radio_button_tag 'use_existing_card', 'no', false, class: 'vspree-radio-input' %>
        <%= label_tag 'use_existing_card', for: 'use_existing_card_no', class: 'vspree-radio-label' do %>
          <p class="md:text-lg md:leading-lg"><%= Spree.t(:add_new_credit_card) %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
