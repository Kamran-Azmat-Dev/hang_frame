<% content_for :page_title do %>
  <%= plural_resource_name(OriginalArt::Type) %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:new_original_art_type), new_object_url, { class: "btn-success", icon: 'add.svg', id: 'admin_new_original_art_type' } %>
<% end if can? :create, OriginalArt::Type %>

<div class="table-responsive">
  <table class="table">
    <thead>
    <tr>
      <th><%= Spree.t(:name) %></th>
      <th><%= Spree.t(:active) %></th>
      <th data-hook="admin_promotions_index_header_actions" class="actions"></th>
    </tr>
    </thead>
    <tbody>
    <% @original_art_types.each do |original_art_type| %>
      <tr id="<%= spree_dom_id original_art_type %>">
        <td><%= original_art_type.name %></td>
        <td><%= original_art_type.active %></td>
        <td class="actions" data-hook="admin_promotions_index_row_actions">
          <span class="d-flex justify-content-end">
            <%= link_to_edit(original_art_type, no_text: true) if can? :edit, original_art_type %>
            <%= link_to_delete(original_art_type, no_text: true) if can? :delete, original_art_type %>
          </span>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
