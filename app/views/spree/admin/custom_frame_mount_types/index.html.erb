<% content_for :page_title do %>
  <%= plural_resource_name(CustomFrame::MountType) %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:new_mount_type), new_object_url, { class: "btn-success", icon: 'add.svg', id: 'admin_new_country' } %>
<% end if can? :create, CustomFrame::MountType %>

<div class="table-responsive">
  <table class="table">
    <thead>
    <tr>
      <th><%= Spree.t(:label) %></th>
      <th><%= Spree.t(:width) %></th>
      <th><%= Spree.t(:price) %></th>
      <th data-hook="admin_promotions_index_header_actions" class="actions"></th>
    </tr>
    </thead>
    <tbody>
    <% @custom_frame_mount_types.each do |mount_type| %>
      <tr id="<%= spree_dom_id mount_type %>">
        <td><%= mount_type.label %></td>
        <td><%= mount_type.width %></td>
        <td><%= mount_type.price %></td>
        <td class="actions" data-hook="admin_promotions_index_row_actions">
          <span class="d-flex justify-content-end">
            <%= link_to_edit(mount_type, no_text: true) if can? :edit, mount_type %>
            <%= link_to_delete(mount_type, no_text: true) if can? :delete, mount_type %>
          </span>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
