<div class="row">
  <div class="col-12 col-md-6">
    <div data-hook="file" class="form-group">
      <%= f.label :attachment, Spree.t(:filename) %>
      <%= f.file_field :attachment %>
    </div>
    <%= f.hidden_field :mount_color_id, value: @mount_color.id %>
  </div>
  <div class="col-12 col-md-6">
    <div class="form-group">
      <%= f.label :name, Spree.t(:name) %>
      <%= f.select :name, options_for_select([CustomFrame::MountPreviewImage::MOUNT_PATTERN, CustomFrame::MountPreviewImage::MOUNT_BORDER_TOP_LEFT, CustomFrame::MountPreviewImage::MOUNT_BORDER_BOTTOM_RIGHT], @object.name), {}, { class: 'select2' } %>
    </div>
    <div class="form-group">
      <%= f.label :width, 'Width (cm)' %>
      <%= f.text_field :width, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :height, 'Height (cm)' %>
      <%= f.text_field :height, class: 'form-control' %>
    </div>
  </div>
</div>
