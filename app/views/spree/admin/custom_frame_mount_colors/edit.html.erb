<% content_for :page_title do %>
  <%= link_to Spree.t(:mount_color), spree.admin_custom_frame_mount_colors_url %> /
  <%= @custom_frame_mount_color.name %>
<% end %>

<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @custom_frame_mount_color } %>

<%= form_for @custom_frame_mount_color, as: :custom_frame_mount_color, url: admin_custom_frame_mount_color_path(@custom_frame_mount_color) do |f| %>
  <fieldset>
    <%= render partial: 'form', locals: { f: f } %>

    <div class="form-actions" data-hook="buttons">
      <%= button Spree.t('actions.update'), 'save.svg', 'submit', {class: 'btn-success', data: { disable_with: "#{ Spree.t(:saving) }..." }} %>
      <span class="or"><%= Spree.t(:or) %></span>
      <%= button_link_to Spree.t('actions.cancel'), admin_custom_frame_mount_colors_path, icon: 'cancel.svg' %>
    </div>
  </fieldset>
<% end %>
