<% content_for :page_title do %>
  <%= plural_resource_name(CustomFrame::MouldingType) %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:new_moulding_type), new_object_url, { class: "btn-success", icon: 'add.svg', id: 'admin_new_country' } %>
<% end if can? :create, CustomFrame::MouldingType %>

<div class="table-responsive">
  <table class="table">
    <thead>
    <tr>
      <th><%= Spree.t(:name) %></th>
      <th data-hook="admin_promotions_index_header_actions" class="actions"></th>
    </tr>
    </thead>
    <tbody>
    <% @custom_frame_moulding_types.each do |moulding_type| %>
      <tr id="<%= spree_dom_id moulding_type %>">
        <td><%= moulding_type.name %></td>
        <td class="actions" data-hook="admin_promotions_index_row_actions">
          <span class="d-flex justify-content-end">
            <%= link_to_edit(moulding_type, no_text: true) if can? :edit, moulding_type %>
            <%= link_to_delete(moulding_type, no_text: true) if can? :delete, moulding_type %>
          </span>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
