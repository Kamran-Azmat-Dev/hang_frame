<%# Link to the "First" page
  - available local variables
    url:           url to the first page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote -%>

<% unless current_page.first? %>
  <li class="first next_page inline-block capitalize mb-2 px-2 md:px-4 py-2 hover:underline page-item flex items-center page-item">
    <%= link_to_unless current_page.first?, inline_svg_tag('pagination-double-arrow-right.svg', size: '13px*16px', class: 'transform rotate-180 spree-icon-arrow-left'), url, remote: remote, class: 'page-link', 'aria-label': 'First page' %>
  </li>
<% end %>
