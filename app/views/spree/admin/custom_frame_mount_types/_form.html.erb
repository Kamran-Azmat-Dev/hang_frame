<div data-hook="admin_country_form_fields">
  <%= f.field_container :name, class: ['form-group'], 'data-hook' => 'name' do %>
    <%= f.label :name, Spree.t(:name) %>
    <%= f.text_field :name, class: 'form-control' %>
    <%= f.error_message_on :name %>
  <% end %>

  <%= f.field_container :label, class: ['form-group'], 'data-hook' => 'label' do %>
    <%= f.label :label, Spree.t(:label) %>
    <%= f.text_field :label, class: 'form-control' %>
    <%= f.error_message_on :label %>
  <% end %>

  <%= f.field_container :price, class: ['form-group'], 'data-hook' => 'price' do %>
    <%= f.label :price, Spree.t(:price) %>
    <%= f.text_field :price, class: 'form-control' %>
    <%= f.error_message_on :price %>
  <% end %>

  <%= f.field_container :width, class: ['form-group'], 'data-hook' => 'width' do %>
    <%= f.label :width, Spree.t(:width) %>
    <%= f.text_field :width, class: 'form-control' %>
    <%= f.error_message_on :width %>
  <% end %>
</div>
