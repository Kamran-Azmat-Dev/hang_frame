<% content_for :page_title do %>
  <%= plural_resource_name(CustomFrame::FoilBlockingColor) %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:new_foil_blocking_color), new_object_url, { class: "btn-success", icon: 'add.svg', id: 'admin_new_country' } %>
<% end if can? :create, CustomFrame::FoilBlockingColor %>

<div class="table-responsive">
  <table class="table sortable" data-sortable-link="<%= update_positions_admin_custom_frame_foil_blocking_colors_path %>">
    <thead>
    <tr>
      <th colspan="2"><%= Spree.t(:name) %></th>
      <th data-hook="admin_promotions_index_header_actions" class="actions"></th>
    </tr>
    </thead>
    <tbody>
    <% @custom_frame_foil_blocking_colors.each do |foil_blocking_color| %>
      <tr id="<%= spree_dom_id foil_blocking_color %>">
        <td class="move-handle">
          <% if can? :edit, foil_blocking_color %>
            <%= svg_icon name: "sort.svg", width: '18', height: '18' %>
          <% end %>
        </td>
        <td><%= foil_blocking_color.name %></td>
        <td class="actions" data-hook="admin_promotions_index_row_actions">
          <span class="d-flex justify-content-end">
            <%= link_to_edit(foil_blocking_color, no_text: true) if can? :edit, foil_blocking_color %>
            <%= link_to_delete(foil_blocking_color, no_text: true) if can? :delete, foil_blocking_color %>
          </span>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
