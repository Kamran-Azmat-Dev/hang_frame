<% content_for :page_title do %>
  <%= plural_resource_name(CustomFrame::MountColor) %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:new_mount_color), new_admin_custom_frame_mount_color_url, { class: "btn-success", icon: 'add.svg', id: 'admin_new_mount_color' } %>
<% end if can? :create, CustomFrame::MountColor %>

<div class="table-responsive">
  <table class="table sortable" data-sortable-link="<%= update_positions_admin_custom_frame_mount_colors_path %>">
    <thead>
    <tr>
      <th colspan="2"><%= Spree.t(:name) %></th>
      <th><%= Spree.t(:presentation) %></th>
      <th><%= Spree.t(:linen) %></th>
      <th><%= Spree.t(:allow_float_mount) %></th>
      <th><%= Spree.t(:active?) %></th>
      <th class="actions"></th>
    </tr>
    </thead>
    <tbody>
    <% @custom_frame_mount_colors.each do |mount_color| %>
      <tr id="<%= spree_dom_id mount_color %>">
        <td class="move-handle">
          <% if can? :edit, mount_color %>
            <%= svg_icon name: "sort.svg", width: '18', height: '18' %>
          <% end %>
        </td>
        <td><%= mount_color.name %></td>
        <td><%= mount_color.presentation %></td>
        <td><%= mount_color.linen? %></td>
        <td><%= mount_color.allow_float_mount? %></td>
        <td><%= mount_color.active? %></td>
        <td class="actions">
          <span class="d-flex justify-content-end">
            <%= button_link_to('Edit preview images', admin_custom_frame_mount_color_custom_frame_mount_preview_images_url(mount_color)) if can? :edit, mount_color %>
            <%= link_to_edit(mount_color, no_text: true) if can? :edit, mount_color %>
            <%= link_to_delete(mount_color, no_text: true) if can? :delete, mount_color %>
          </span>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
