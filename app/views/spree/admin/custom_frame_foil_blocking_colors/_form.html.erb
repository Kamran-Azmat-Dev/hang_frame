<div>
  <%= f.field_container :name, class: ['form-group'], 'data-hook' => 'name' do %>
    <%= f.label :name, Spree.t(:name) %>
    <%= f.text_field :name, class: 'form-control' %>
    <%= f.error_message_on :name %>
  <% end %>

  <%= f.field_container :name, class: ['form-group'], 'data-hook' => 'display' do %>
    <%= f.label :display, Spree.t(:display) %>
    <%= f.text_field :display, class: 'form-control' %>
    <%= f.error_message_on :display %>
  <% end %>

  <%= f.field_container :active, class: ['form-group'] do %>
    <%= f.check_box :active, class: 'form-control w-auto h-auto mr-1' %>
    <%= f.label :active, Spree.t(:active) %>
    <%= f.error_message_on :active %>
  <% end %>
</div>
